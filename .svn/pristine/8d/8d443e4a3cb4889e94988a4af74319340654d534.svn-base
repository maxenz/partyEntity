Imports WeifenLuo.WinFormsUI.Docking
Public Class frmLogErrores

    Private Sub frmLogErrores_Load(ByVal sender As Object, ByVal e As System.EventArgs) Handles Me.Load
        SetToolbarsFormat()
        SetTreeViewsFormat()
        '----> Init en bases operativas
        SelButtons(refBaseOperativa)
    End Sub
    Private Sub SetToolbarsFormat()
        Me.tolBotones.Items(0).Tag = refBaseOperativa
        Me.tolBotones.Items(1).Tag = refSanatorio
        Me.tolBotones.Items(2).Tag = refPrestador
        Me.tolBotones.Items(3).Tag = refCentroAtencion
        Me.tolBotones.Items(4).Tag = refMovil
        Me.tolBotones.Items(5).Tag = refIncidente
    End Sub
    Private Sub SetTreeViewsFormat()
        Me.trwBasesOperativas.ImageList = MainTree.imlIconos
        Me.trwNosocomios.ImageList = MainTree.imlIconos
        Me.trwPrestadores.ImageList = MainTree.imlIconos
        Me.trwCentrosAtencion.ImageList = MainTree.imlIconos
        Me.trwMoviles.ImageList = MainTree.imlIconos
        Me.trwIncidentes.ImageList = MainTree.imlIconos
    End Sub

    Private Sub btnAll_Click(ByVal sender As System.Object, ByVal e As System.EventArgs) Handles btnBasesOperativas.Click, btnNosocomios.Click, btnPrestadores.Click, btnCentrosAtencion.Click, btnMoviles.Click, btnIncidentes.Click
        SelButtons(sender.Tag)
    End Sub

    Private Sub SelButtons(ByVal pTag As Integer)
        Dim item As ToolStripButton

        For Each item In Me.tolBotones.Items

            If Val(item.Tag) = pTag Then

                Select Case pTag
                    Case refBaseOperativa
                        Me.trwBasesOperativas.Dock = DockStyle.Fill
                        Me.trwBasesOperativas.Visible = True
                    Case refSanatorio
                        Me.trwNosocomios.Dock = DockStyle.Fill
                        Me.trwNosocomios.Visible = True
                    Case refPrestador
                        Me.trwPrestadores.Dock = DockStyle.Fill
                        Me.trwPrestadores.Visible = True
                    Case refCentroAtencion
                        Me.trwCentrosAtencion.Dock = DockStyle.Fill
                        Me.trwCentrosAtencion.Visible = True
                    Case refMovil
                        Me.trwMoviles.Dock = DockStyle.Fill
                        Me.trwMoviles.Visible = True
                    Case refIncidente
                        Me.trwIncidentes.Dock = DockStyle.Fill
                        Me.trwIncidentes.Visible = True
                End Select
            Else
                item.CheckState = CheckState.Unchecked
                Select Case Val(item.Tag)
                    Case refBaseOperativa : trwBasesOperativas.Visible = False
                    Case refSanatorio : Me.trwNosocomios.Visible = False
                    Case refPrestador : Me.trwPrestadores.Visible = False
                    Case refCentroAtencion : Me.trwCentrosAtencion.Visible = False
                    Case refMovil : Me.trwMoviles.Visible = False
                    Case refIncidente : Me.trwIncidentes.Visible = False
                End Select
            End If

        Next

    End Sub
End Class